<RootWidget>:
    StackLayout:
        pos_hint: {'right':1, 'top':.9}
        important: True
        orientation: 'lr-tb'
        size_hint: (.3, 1)
        Button:
            text: 'Test'
            on_press: root.renderer.changeColor("golden")
            width: 80
            pos_hint: {'right':0}
            size_hint: (None, 0.05)
        Button:
            text: 'Test2'
            on_press: root.renderer.changeColor("golden")
            width: 80
            pos_hint: {'right':0}
            size_hint: (None, 0.05)
	ActionBar:
		pos_hint: {'top':1}
        important: True
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'QuadRenderer'
                with_previous: False
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionButton:
                    text: 'New'
                ActionButton:
                    text: 'Open'
                ActionButton:
                    text: 'Save'
                ActionButton:
                    text: 'Save As'
                ActionButton:
                    text: 'Quit'
                    on_press: app.Quit()
            ActionGroup:
                text: 'Fractal'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionToggleButton:
                    text: 'Mandelbrot'
                    on_press: root.renderer.changeFractal('mandelbrot')
                    group: 'fractal'
                    state: 'down'
                ActionToggleButton:
                    text: 'Julia'
                    on_press: root.renderer.changeFractal('julia')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Cactus'
                    on_press: root.renderer.changeFractal('cactus')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Gradient'
                    on_press: root.renderer.changeFractal('gradient')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Mandel (Full)'
                    on_press: root.renderer.changeFractal('fullmandel')
                    group: 'fractal'
            ActionGroup:
                text: 'Color'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionToggleButton:
                    text: 'Greyscale'
                    on_press: root.renderer.changeColor("greyscale")
                    group: 'color'
                    state: 'down'
                ActionToggleButton:
                    text: 'Golden'
                    on_press: root.renderer.changeColor("golden")
                    group: 'color'
                ActionToggleButton:
                    text: 'Horizon'
                    on_press: root.renderer.changeColor("horizon")
                    group: 'color'
                ActionToggleButton:
                    text: 'Incandescent'
                    on_press: root.renderer.changeColor("incandescent")
                    group: 'color'
