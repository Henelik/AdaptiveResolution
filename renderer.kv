<RootWidget>:
	ActionBar:
		pos_hint: {'top':1}
        important: True
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'QuadRenderer'
                with_previous: False
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionButton:
                    text: 'New'
                ActionButton:
                    text: 'Open'
                ActionButton:
                    text: 'Save'
                ActionButton:
                    text: 'Save As'
                ActionButton:
                    text: 'Quit'
                    on_press: app.Quit()
            ActionGroup:
                text: 'Fractal'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionButton:
                    text: 'Mandelbrot'
                    on_press: root.renderer.changeFractal('mandelbrot')
                ActionButton:
                    text: 'Julia'
                    on_press: root.renderer.changeFractal('julia')
                ActionButton:
                    text: 'Cactus'
                    on_press: root.renderer.changeFractal('cactus')
                ActionButton:
                    text: 'Gradient'
                    on_press: root.renderer.changeFractal('gradient')
            ActionGroup:
                text: 'Color'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionButton:
                    text: 'Greyscale'
                    on_press: root.renderer.changeColor("greyscale")
                ActionButton:
                    text: 'Golden'
                    on_press: root.renderer.changeColor("golden")
                ActionButton:
                    text: 'Horizon'
                    on_press: root.renderer.changeColor("horizon")
                ActionButton:
                    text: 'Incandescent'
                    on_press: root.renderer.changeColor("incandescent")
