<RootWidget>:
    BoxLayout:
        pos_hint: {'right':1, 'top':.9}
        important: True
        size_hint: (.3, .5)
        orientation: 'vertical'
        #Button:
        #    text: 'Test'
        #    on_press: root.renderer.changeColor("golden")
        #    width: 80
        #    size_hint: (1, 1)
        BoxLayout:
            important: True
            width: 80
            size_hint: (1, 1)
            Label:
                text: 'Color Ramp Strength'
                width: 80
                size_hint: (0.1, None)
            Slider:
                min: .1
                max: 10
                value: 1.732
                width: 80
                size_hint: (0.1, None)
                on_touch_up: root.renderer.changeRamp(self.value)
        BoxLayout:
            important: True
            width: 80
            size_hint: (1, 1)
            Label:
                text: 'Max IFF Iterations'
                width: 80
                size_hint: (0.1, None)
            FloatInput:
                multiline: False
                text: '1000'
                width: 80
                size_hint: (0.1, None)
                on_text_validate: self.text = root.renderer.changeMaxIters(self.text)
        BoxLayout:
            important: True
            width: 80
            size_hint: (1, 1)
            Label:
                text: 'Julia Set cx'
                width: 80
                size_hint: (0.1, None)
            Slider:
                min: -1
                max: 1
                value: .3
                width: 80
                size_hint: (0.1, None)
                on_touch_move: root.renderer.changeJuliacx(self.value)
        BoxLayout:
            important: True
            width: 80
            size_hint: (1, 1)
            Label:
                text: 'Julia Set cy'
                width: 80
                size_hint: (0.1, None)
            Slider:
                min: -1
                max: 1
                value: .5
                width: 80
                size_hint: (0.1, None)
                on_touch_move: root.renderer.changeJuliacy(self.value)
	ActionBar:
		pos_hint: {'top':1}
        important: True
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'QuadRenderer'
                with_previous: False
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                width: 90
                #ActionButton:
                #    text: 'Open'
                ActionButton:
                    text: 'Save Image'
                    on_press: root.renderer.saveImage()
                #ActionButton:
                #    text: 'Save Coordinate'
                ActionButton:
                    text: 'Quit'
                    on_press: app.Quit()
            ActionGroup:
                text: 'Fractal'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionToggleButton:
                    text: 'Mandelbrot'
                    on_press: root.renderer.changeFractal('mandelbrot')
                    group: 'fractal'
                    state: 'down'
                ActionToggleButton:
                    text: 'Julia'
                    on_press: root.renderer.changeFractal('julia')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Cactus'
                    on_press: root.renderer.changeFractal('cactus')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Gradient'
                    on_press: root.renderer.changeFractal('gradient')
                    group: 'fractal'
                ActionToggleButton:
                    text: 'Scanline'
                    on_press: root.renderer.changeFractal('scanline')
                    group: 'fractal'
            ActionGroup:
                text: 'Color'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionToggleButton:
                    text: 'Greyscale'
                    on_press: root.renderer.changeColor("greyscale")
                    group: 'color'
                    state: 'down'
                ActionToggleButton:
                    text: 'Golden'
                    on_press: root.renderer.changeColor("golden")
                    group: 'color'
                ActionToggleButton:
                    text: 'Horizon'
                    on_press: root.renderer.changeColor("horizon")
                    group: 'color'
                ActionToggleButton:
                    text: 'Incandescent'
                    on_press: root.renderer.changeColor("incandescent")
                    group: 'color'
                ActionToggleButton:
                    text: 'Rainbow'
                    on_press: root.renderer.changeColor("rainbow")
                    group: 'color'
            ActionGroup:
                text: 'Color Mode'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionToggleButton:
                    text: 'RGB'
                    on_press: root.renderer.changeColorMode(0)
                    group: 'colormode'
                    state: 'down'
                ActionToggleButton:
                    text: 'GBR'
                    on_press: root.renderer.changeColorMode(1)
                    group: 'colormode'
                ActionToggleButton:
                    text: 'BRG'
                    on_press: root.renderer.changeColorMode(2)
                    group: 'colormode'
